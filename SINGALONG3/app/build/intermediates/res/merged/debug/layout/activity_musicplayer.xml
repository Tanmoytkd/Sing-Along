<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project1.musicapp.singalong.Musicplayer">

    <SeekBar
        android:id="@+id/songSeekBar"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/nextBtn"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/share"
        android:layout_alignTop="@+id/imageView10"
        android:layout_alignEnd="@+id/songSeekBar" />

    <TextView
        android:id="@+id/songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/artist"
        android:layout_alignEnd="@+id/songSeekBar"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="21dp"
        android:text="সোনা দিয়া বান্ধাইয়াছি ঘর"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arnob and Friends"
        android:textSize="15dp"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/songSeekBar"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/PlayBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/playbutton"
        android:layout_above="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp" />

    <ImageView
        android:id="@+id/nextBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/fastforward"
        android:layout_alignTop="@+id/PlayBtn"
        android:layout_toStartOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/previousBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/rewind"
        android:layout_alignTop="@+id/PlayBtn"
        android:layout_toStartOf="@+id/PlayBtn"
        android:layout_marginEnd="17dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="46dp"
        app:srcCompat="@drawable/lovebutton"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/previousBtn" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/dislikebutton"
        android:layout_alignTop="@+id/imageView9"
        android:layout_alignEnd="@+id/PlayBtn" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upward Over The Mountain( Iron and Wine)"
        android:textSize="17dp"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/imageView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/greetingline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="A refreshing Morning?"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/previousBtn" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/sun"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="28dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="14dp"
        app:srcCompat="@drawable/bitstrip"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi,Jamima!"
        android:textSize="15dp"
        android:layout_below="@+id/imageView11"
        android:layout_alignStart="@+id/imageView11"
        android:layout_marginTop="13dp" />

</RelativeLayout>
